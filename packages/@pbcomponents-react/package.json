{
  "name": "@pbcomponents/react",
  "version": "0.1.1",
  "description": "UI component library for React with Typescript and Tailwind",
  "license": "MIT",
  "author": "Evgenii Sazhin <prosazhin@gmail.com> (https://prosazhin.ru)",
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "ui",
    "components",
    "components-library",
    "ui-components",
    "library",
    "design",
    "tool"
  ],
  "homepage": "https://github.com/prosazhin/pbcomponents",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosazhin/pbcomponents.git",
    "directory": "packages/react"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": {
        "default": "./dist/index.cjs"
      },
      "import": {
        "default": "./dist/index.js"
      }
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint src",
    "clean:build": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean": "npm-run-all -p clean:*"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/vite": "^4.1.6",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.4",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "globals": "^16.1.0",
    "motion": "^12.11.0",
    "pbstyles": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-preserve-directives": "^1.1.3",
    "tailwindcss": "^4.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "contributors": [
    {
      "name": "Evgenii Sazhin",
      "email": "prosazhin@gmail.com",
      "url": "https://github.com/prosazhin"
    },
    {
      "name": "Katya Lebedeva",
      "email": "le.ktrna@gmail.com",
      "url": "https://github.com/klebedeva"
    }
  ]
}
