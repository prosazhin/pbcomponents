{
  "name": "@pbcomponents/react",
  "version": "0.0.1",
  "description": "UI component library for React with Typescript and Tailwind",
  "license": "MIT",
  "author": "Evgenii Sazhin <prosazhin@gmail.com> (https://prosazhin.ru)",
  "keywords": [
    "react",
    "typescript",
    "tailwindcss",
    "ui",
    "components",
    "components-library",
    "ui-components",
    "library",
    "design",
    "tool"
  ],
  "homepage": "https://github.com/prosazhin/pbcomponents",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosazhin/pbcomponents.git",
    "directory": "packages/react"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "styles": "./dist/index.css"
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "lint": "eslint src",
    "clean:build": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean": "npm-run-all -p clean:*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@heroicons/react": "^2.1.5",
    "@tailwindcss/forms": "^0.5.8",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "globals": "^15.9.0",
    "pbstyles": "^2.0.1",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-plugin-dts": "^4.0.3"
  },
  "contributors": [
    {
      "name": "Katya Lebedeva",
      "email": "le.ktrna@gmail.com",
      "url": "https://github.com/klebedeva"
    }
  ]
}
