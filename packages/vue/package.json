{
  "name": "@pbcomponents/vue",
  "version": "0.0.1",
  "description": "UI component library for Vue with Typescript and Tailwind",
  "license": "MIT",
  "author": "Evgenii Sazhin <prosazhin@gmail.com> (https://prosazhin.ru)",
  "keywords": [
    "vue",
    "typescript",
    "tailwindcss",
    "ui",
    "components",
    "components-library",
    "ui-components",
    "library",
    "design",
    "tool"
  ],
  "homepage": "https://github.com/prosazhin/pbcomponents",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosazhin/pbcomponents.git",
    "directory": "packages/vue"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "styles": "./dist/index.css"
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc && vite build",
    "lint": "eslint src",
    "clean:build": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean": "npm-run-all -p clean:*"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@heroicons/vue": "^2.1.5",
    "@eslint/js": "^9.9.1",
    "@tailwindcss/forms": "^0.5.8",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.1",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-vue": "^9.27.0",
    "pbstyles": "^2.0.1",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.2",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-plugin-dts": "^4.0.3",
    "vue-tsc": "^2.1.4",
    "globals": "^15.9.0",
    "clsx": "^2.1.1",
    "typescript-eslint": "^8.3.0"
  },
  "contributors": [
    {
      "name": "Evgenii Sazhin",
      "email": "prosazhin@gmail.com",
      "url": "https://github.com/prosazhin"
    },
    {
      "name": "Katya Lebedeva",
      "email": "le.ktrna@gmail.com",
      "url": "https://github.com/klebedeva"
    }
  ]
}
